{
    "name": "Vue.js test tool",
    "version": "1.0",
    "description": "Chrome and Firefox DevTools extension for debugging Vue.js applications.",
    "manifest_version": 2,
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "http://*/*",
        "https://*/*",
        "file:///*"
    ],
    "browser_action": {
        "default_icon": "icons/icon48.png",
        "default_popup": "popup.html"
    }
